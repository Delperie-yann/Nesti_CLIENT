{% extends "base.html.twig" %}
{% block body %}

	<div class="container">
		<h2 class=" text-center">Recettes</h2>


		<div id="backgroundTag">
			<div class="container-fluid   d-flex justify-content-center">


				<div class="btn-group">
					<a class="btntag" href='{{base_url('/recipes/1')}}'>Facile</a>
					<a class="btntag" href='{{base_url("/recipes/2")}}'>Gluten</a>
					<a class="btntag" href='{{base_url("/recipes/3")}}'>Saison</a>
					<a class="btntag" href='{{base_url("/recipes/4")}}'>Tradition</a>
				</div>

			</div>
		</div>


		<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5">
			{% for rec in recipes %}

				<div class="col mb-4">
					<div class="card">
						
						<a href="{{base_url("/detailsRecipe")}}/{{rec.idRecipe}}">
							<img src="{{base_url("../images/recettes/"~ rec.getImageName(rec.idImage)~"."~ rec.getImageExtend(rec.idImage))}}" class="card-img-top" alt="Responsive image of card">
						</a>
						<div class="card-body">
							<h5 class="card-title text-center">{{rec.name}}</h5>

							<a href="{{base_url("/detailsRecipe")}}/{{rec.idRecipe}}" class="btn Detail d-block stretched-link">Detail de la recette</a>

							<p class="card-text text-center">Note :

								{% if rec.getGrade(rec.idRecipe) != 0 %}
									{{rec.getGrade(rec.idRecipe)}}
								{% else %}
									pas not√©e
								{% endif %}
							</p>

							{% if user %}
								<a href="{{base_url("/detailsRecipe")}}/{{rec.idRecipe}}" class="btn Commentaire d-block">Commentaire
								</a>
							{% endif %}
						</div>
					</div>
				</div>


			{% endfor %}
		</div>
	</div>

{% endblock %}
