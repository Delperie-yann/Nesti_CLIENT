{% extends "base.html.twig" %}
{% block body %}
	{% if user.login != NULL %}
		<div class="container">
			<h2 class=" text-center">Panier</h2>
			<h3 class="font-weight-bold pt-5 ">Liste des articles</h3>
			<div class="card w-100">
				<div class="card-body">
					<table class="table">
						<thead id="nameCast">
							<tr>
								<th scope="col">Nom</th>
								<th scope="col">Quantity</th>
								<th scope="col">Modification</th>
								<th scope="col">Prix Unité</th>
								<th scope="col">Prix Total</th>
							</tr>
						</thead>
						<tbody id="nameCast"></tbody>
					</table>
					<div class="modal-footer">
						<div class="btn btn-info">
							<label class="mt-3" for="">Total :</label>
							<span id="result" class="ml-2 text-center">0€</span>
						</div>
					</div>
				</div>
			</div>
			{{ form_open ( base_url('/buy') ) }}
			<div class="modal-footer">
				<button class="btn btn-success" type="submit" name="validateOrder" data-toggle="modal" data-target="#exampleModal" data-dismiss="modal">Valider</button>
			</div>
			{{ validation.errors ? validation.errors.name}}
			{{ form_close }}
			{% if launchBuy == true %}
				<div class="container-fluid">
					<div class="row d-flex justify-content-center">
						<div class="col-sm-12">
							<div class="card mx-auto">
								<label class="heading">PAYMENT DETAILS</label>
								<form class="card-details ">
									<div class="form-group mb-0">
										<label class="text-white bg-dark mb-0">Card Number</label>
										<input type="text" name="card-num" placeholder="1234 5678 9012 3457" size="17" id="cno" minlength="19" maxlength="19">
										<img src="https://img.icons8.com/color/48/000000/visa.png" width="64px" height="60px"/>
									</div>
									<div class="form-group">
										<label class="text-white bg-dark mb-0">Cardholder's Name</label>
										<input type="text" name="name" placeholder="Name" size="17">
									</div>
									<div class="form-group pt-2">
										<div class="row d-flex">
											<div class="col-sm-4">
												<label class="text-white bg-dark mb-0">Expiration</label>
												<input type="text" name="exp" placeholder="MM/YYYY" size="7" id="exp" minlength="7" maxlength="7">
											</div>
											<div class="col-sm-3">
												<label class="text-white bg-dark mb-0">Cvv</label>
												<input type="password" name="cvv" placeholder="&#9679;&#9679;&#9679;" size="1" minlength="3" maxlength="3">
											</div>
											<div class="col-sm-5 pt-0">
												<button type="button" class="btn btn-primary">
													<i class="fas fa-arrow-right px-3 py-2">Payer</i>
												</button>
											</div>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>

		{% endif %}
	{% endif %}
{% endblock %}
